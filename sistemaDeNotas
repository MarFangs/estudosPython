notas = []

def mediaNotas():
    if len(notas) == 0:
        return 0
    return sum(notas) / len(notas)

while True:
    print("\n" + "="*40)
    print("SISTEMA DE CONTROLE DE NOTAS")
    print("="*40)
    print("1: Adicionar notas")
    print("2: Calcular média de notas registradas")
    print("3: Relatório de notas")
    print("4: Sair")
    
    try:
        escolha = int(input("Selecione a opção desejada: "))
    except ValueError:
        print("Por favor, digite um número válido!")
        continue

    if escolha == 1:
        print("\n--- ADICIONANDO NOTAS ---")
        while True:
            nota_input = input("Digite a nota (0-10) ou '00' para sair: ")
            
            if nota_input == "00":
                break
                
            try:
                nota = float(nota_input)
                if 0 <= nota <= 10:
                    notas.append(nota)
                    print(f"Nota {nota} adicionada com sucesso!")
                else:
                    print("Nota deve estar entre 0 e 10!")
            except ValueError:
                print("Entrada inválida. Digite um número para a nota.")

    elif escolha == 2:
        if len(notas) == 0:
            print("Nenhuma nota foi adicionada ainda!")
        else:
            media = mediaNotas()
            print(f"Valor da média calculada: {media:.2f}")
            
            if media >= 7:
                resultado = "Aluno aprovado!"
            else:
                resultado = "Aluno reprovado!"
            print(resultado)

    elif escolha == 3:
        if len(notas) == 0:
            print("Nenhuma nota foi adicionada ainda!")
        elif 'media' not in locals() or 'resultado' not in locals():
            print("Calcule a média primeiro para gerar o relatório.")
        else:
            print("\n--- RELATÓRIO DE NOTAS ---")
            print(f"Notas do Aluno: {notas}")
            print(f"Média atingida: {media:.2f}")
            print(f"Situação do aluno: {resultado}")

    elif escolha == 4:
        print("Saindo do sistema...")
        break
    else:
        print("Opção inválida, tente novamente!")
